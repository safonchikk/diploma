<VideoScreen>:
    MDBoxLayout:
        spacing: dp(10)
        padding: dp(10)
        orientation: 'vertical'
        MDBoxLayout:
            size_hint: .2, .1
            spacing: dp(30)
            MDRoundFlatButton:
                size_hint: .2, 1
                text: 'Back'
                font_size: dp(20)
                on_release:
                    root.go_back(self)
                    app.root.remove_widget(app.root.get_screen('video'))

        Image:
            id:author_avatar
            source: 'images/account.png'

        MDLabel:
            id: author
            text: "Author's name"
            text_size: self.size
            font_size: dp(20)

        MDLabel:
            id: title
            text: "Title"
            text_size: self.size
            font_size: dp(20)

        VideoPlayer:
            id: video
            #source: "images/cat_video.mp4"
            state: 'stop'