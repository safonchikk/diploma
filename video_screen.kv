<VideoScreen>:
    MDBoxLayout:
        spacing: dp(10)
        padding: dp(10)
        orientation: 'vertical'
        MDBoxLayout:
            size_hint: .2, .1
            spacing: dp(30)
            MDRoundFlatButton:
                size_hint: .2, 1
                text: 'Back'
                font_size: dp(20)
                on_release:
                    root.go_back(self)
                    app.root.remove_widget(app.root.get_screen('video'))

        VideoPlayer:
            id: video
            size_hint: 1, None
            height: dp(300)
            #source: "images/cat_video.mp4"
            state: 'stop'

        MDLabel:
            size_hint: 1, .2
            halign: 'left'
            id: title
            text: "Title"
            font_size: dp(30)

        MDBoxLayout:
            size_hint: 1, .2
            #height: dp(30)
            Button:
                id: like_button
                size_hint: .3, 1
                #width: dp(50)
                background_color: 1,1,1,0
                on_release: root.open_creator()
                Image:
                    id: author_avatar
                    source: 'images/account.png'
                    size: self.parent.size
                    pos: self.parent.pos


            MDLabel:
                halign: 'left'
                valign: 'center'
                size_hint: .7, 1
                id: author
                text: "Author's name"
                text_size: self.size
                font_size: dp(20)

        MDBoxLayout:
            size_hint: .5, .2
            Button:
                id: like_button
                size_hint: .5, 1
                background_color: 1,1,1,0
                on_release: root.like()
                Image:
                    id: like_icon
                    source: "images/like.png"
                    size: self.parent.size
                    pos: self.parent.pos

            Button:
                id: comment_button
                size_hint: .5, 1
                background_color: 1,1,1,0
                on_release:
                    #root.comment()
                    app.root.current = 'comment'
                    root.manager.transition.direction = 'up'
                Image:
                    id: comment_icon
                    source: "images/comment.png"
                    size: self.parent.size
                    pos: self.parent.pos