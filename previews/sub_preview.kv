<SubPreview>
    MDBoxLayout:
        orientation: 'vertical'
        pos: root.pos
        size: self.parent.size
        md_bg_color: .9, .9, .9, 1
        spacing: dp(10)
        padding: dp(10)

        MDLabel:
            id: name
            size_hint: 1, .2
            font_size: dp(30)
            halign: 'center'

        MDLabel:
            id: price
            size_hint: 1, .2
            font_size: dp(30)
            halign: 'center'

        MDLabel:
            id: description
            font_size: dp(24)
            multiline: True
            size_hint: 1, .6

        MDBoxLayout:
            size_hint: 1, .2
            spacing: dp(30)

            MDRoundFlatButton:
                id: sub_button
                text: 'Subscribe'
                size_hint: .4, 1
                font_size: dp(20)
                md_bg_color: 1,1,1,1
                on_release:
                    root.sub()
                    app.root.current_screen.load_subs()


            MDRoundFlatButton:
                id: unsub_button
                text: 'Unsubscribe'
                size_hint: .4, 1
                font_size: dp(20)
                md_bg_color: 1,1,1,1
                on_release:
                    root.unsub()
                    app.root.current_screen.load_subs()