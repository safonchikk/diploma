<VideoPreview>
    on_release:
        app.root.add_widget(self.get_screen())
        app.root.screen_history.append(app.root.current)
        app.root.current = 'video'
    MDBoxLayout:
        orientation: 'vertical'
        pos: root.pos
        size: self.parent.size
        md_bg_color: .9, .9, .9, 1

        Image:
            id: thumbnail
            source: 'images/thumbnail.jpg'
            size: self.size
            size_hint: 1, .75

        MDBoxLayout:
            size_hint: 1, .25
            padding: dp(5)
            Image:
                id: author_avatar
                source: 'images/account.png'
                size_hint: .15, 1

            MDBoxLayout:
                size_hint: 1, .8
                padding: dp(5)
                orientation: 'vertical'

                MDLabel:
                    id: title
                    text: 'Video Title'
                    size_hint: 1, .6
                    font_size: dp(30)

                MDLabel:
                    id: author_name
                    text: 'John Doe'
                    size_hint: 1, 0.4
                    font_size: dp(20)
