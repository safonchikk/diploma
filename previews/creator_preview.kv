<CreatorPreview>
    on_release:
        app.root.add_widget(self.get_screen())
        app.root.screen_history.append(app.root.current)
        app.root.current = 'creator'
    MDBoxLayout:
        pos: root.pos
        size: self.parent.size
        md_bg_color: .9, .9, .9, 1
        padding: dp(5)
        spacing: dp(10)

        Image:
            id: avatar
            source: 'images/account.png'
            size_hint: .3, 1

        MDLabel:
            id: name
            text: 'John Sport Tips'
            size_hint: .7, 1
            text_size: self.size
            font_size: dp(28)