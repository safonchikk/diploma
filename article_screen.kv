<ArticleScreen>:
    MDBoxLayout:
        spacing: dp(10)
        padding: dp(10)
        orientation: 'vertical'
        MDBoxLayout:
            height: self.minimum_height
            size_hint: .2, .1
            spacing: dp(30)
            MDRoundFlatButton:
                size_hint: .2, 1
                text: 'Back'
                font_size: dp(20)
                on_release:
                    root.go_back(self)
                    app.root.remove_widget(app.root.get_screen('article'))
        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: max(self.minimum_height, dp(200))

                MDBoxLayout:
                    size_hint: 1, .2
                    spacing: dp(10)
                    adaptive_height: True

                    Image:
                        id: author_avatar
                        size_hint_x: None
                        width: dp(50)
                        source: 'images/account.png'

                    MDLabel:
                        id: author
                        text: "Author's name"
                        font_size: dp(20)
                        valign: 'center'
                        halign: 'left'

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, None
                    MDLabel:
                        size_hint: 1, 0.2
                        halign: 'center'
                        id: headline
                        text: "Headline"
                        text_size: self.size
                        font_size: dp(30)

                    MDLabel:
                        size_hint: 1, 0.7
                        id: text
                        text: "Text"
                        font_size: dp(20)
                        multiline: True