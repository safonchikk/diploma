<CreatorProfileScreen>:
    MDFloatLayout:
        MDIconButton:
            size_hint: 0.2, 0.1
            pos_hint: {'top': 1, 'right': 1}
            #background_color: 1,1,1,0
            on_release:
                app.user = ''
                app.role = ''
                app.root.current = 'login'
                app.root.transition.direction = 'right'
            icon: 'logout-variant'
            icon_size: dp(55)

    MDBoxLayout:
        size: root.size
        pos: root.pos
        spacing: dp(10)
        padding: dp(10)
        orientation: 'vertical'

        Image:
            id: avatar
            source: 'images/account.png'
            size_hint: 1, 0.3

        MDLabel:
            id: login
            text: '@jack_sport_tips'
            halign: 'center'
            font_size: dp(30)
            size_hint: 1, 0.1

        MDLabel:
            id: info
            text: '#a #b #c \n#d #e #f'
            halign: 'center'
            font_size: dp(20)
            size_hint: 1, 0.2

        MDRoundFlatButton:
            text: 'Edit profile'
            size_hint: 1, 0.15
            font_size: dp(20)
            on_release:
                app.root.screen_history.append(app.root.current)
                app.root.current = 'edit_profile'
                app.root.transition.direction = 'left'
                app.root.current_screen.load_current_info()

        MDRoundFlatButton:
            text: 'Configure subscriptions'
            size_hint: 1, 0.15
            font_size: dp(20)
            on_release:
                app.root.screen_history.append(app.root.current)
                app.root.current = 'sub_page'
                app.root.transition.direction = 'left'
                app.root.current_screen.load_subs()

        MDRoundFlatButton:
            text: 'Diplomas'
            size_hint: 1, 0.15
            font_size: dp(20)
            on_release:
                app.root.screen_history.append(app.root.current)
                app.root.current = 'diploma_page'
                app.root.transition.direction = 'left'
                app.root.current_screen.load_diplomas()

        MDRoundFlatButton:
            text: 'Shorts'
            size_hint: 1, 0.15
            font_size: dp(20)
            on_release:
                app.root.screen_history.append(app.root.current)
                app.root.current = 'short_page'
                app.root.current_screen.load_videos()

        MDRoundFlatButton:
            text: 'Videos'
            size_hint: 1, 0.15
            font_size: dp(20)
            on_release:
                app.root.screen_history.append(app.root.current)
                app.root.current = 'video_page'
                app.root.transition.direction = 'left'
                app.root.current_screen.load_videos()

        MDRoundFlatButton:
            text: 'Articles'
            size_hint: 1, 0.15
            font_size: dp(20)
            on_release:
                app.root.screen_history.append(app.root.current)
                app.root.current = 'article_page'
                app.root.transition.direction = 'left'
                app.root.current_screen.load_articles()

