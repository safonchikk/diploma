<Short>
    #md_bg_color: 1,0,0,1
    MDFloatLayout:
        size: root.size
        pos: root.pos
        VideoPlayer:
            id: video
            source: "images/cat_video.mp4"
            size: root.size
            pos: root.pos
            state: 'stop'

        Label:
            id: title

        Button:
            id: author_button
            pos_hint: {'x': .8, 'y': .5}
            size_hint: .2, .1
            background_color: 1,1,1,0
            on_release: root.open_creator()
            Image:
                id: author_avatar
                source: "images/like.png"
                size: self.parent.size
                pos: self.parent.pos

        Button:
            id: like_button
            pos_hint: {'x': .8, 'y': .37}
            size_hint: .2, .1
            background_color: 1,1,1,0
            on_release: root.like()
            Image:
                id: like_icon
                source: "images/like.png"
                size: self.parent.size
                pos: self.parent.pos

        Button:
            id: comment_button
            pos_hint: {'x': .8, 'y': .24}
            size_hint: .2, .1
            background_color: 1,1,1,0
            on_release:
                #root.comment()
                app.root.current = 'comment'
                root.manager.transition.direction = 'up'
            Image:
                id: comment_icon
                source: "images/comment.png"
                size: self.parent.size
                pos: self.parent.pos