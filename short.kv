<Short>
    #md_bg_color: 1,0,0,1
    MDFloatLayout:
        pos: root.pos
        height: dp(800)
        VideoPlayer:
            id: video
            source: "images/cat_video.mp4"
            height: dp(800)
            pos: root.pos
            state: 'stop'

        Button:
            id: like_button
            pos_hint: {'x': .8, 'y': .4}
            size_hint: .2, .1
            background_color: 1,1,1,0
            on_release: root.like()
            Image:
                id: like_icon
                source: "images/like.png"
                size: self.parent.size
                pos: self.parent.pos

        Button:
            id: comment_button
            pos_hint: {'x': .8, 'y': .27}
            size_hint: .2, .1
            background_color: 1,1,1,0
            on_release:
                #root.comment()
                app.root.current = 'comment'
                root.manager.transition.direction = 'up'
            Image:
                id: comment_icon
                source: "images/comment.png"
                size: self.parent.size
                pos: self.parent.pos