<LoginScreen>
    MDFloatLayout:
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            size_hint: 1, None
            height: self.minimum_height
            pos_hint: {'top': 1.0}

            MDTextField:
                hint_text: 'Login'
                text: 'author'
                id: login_input
                multiline: False
                size_hint: 1, None
                font_size: dp(40)

            MDTextField:
                text: 'password'
                id: password_input
                password: True
                hint_text: 'Password'
                multiline: False
                size_hint: 1, None
                font_size: dp(40)

        MDBoxLayout:
            pos_hint: {'bottom': 1.0}
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            size_hint: (1, .18)

            MDRoundFlatButton:
                text: 'Log in'
                font_size: dp(40)
                size_hint: (1, 0.4)
                on_release:
                    root.login()

            MDRoundFlatButton:
                text: 'Create an account'
                font_size: dp(20)
                size_hint: (1, 0.2)
                line_color: (0, 0, 0, 0)
                on_release:
                    app.root.current = 'registration'