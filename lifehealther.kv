<MainScreen>

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            padding: dp(10), dp(3), 0, dp(3)
            spacing: dp(10)
            size_hint: 1, None
            height: dp(60)

            MDTextField:
                id: search_input
                mode: "round"
                multiline: False
                size_hint: .7, 1
                font_size: dp(30)

            MDIconButton:
                size_hint: .15, 1
                id: search_button
                background_color: 1,1,1,0
                icon: 'magnify'
                icon_size: dp(55)
                on_release: root.search()

            MDIconButton:
                size_hint: .15, 1
                background_color: 1,1,1,0
                on_release:
                    app.user = ''
                    app.role = ''
                    app.root.current = 'login'

                icon: 'logout-variant'
                icon_size: dp(55)


        MDBottomNavigation:
            panel_color: .4, .4, .4, 1

            MDBottomNavigationItem:
                name: 'shorts_screen'
                text: 'Shorts'
                icon: 'filmstrip-box'

                BoxLayout:
                    md_bg_color: 1,0,0,1
                    size_hint: (1, None)
                    size: (root.width, root.height-dp(120))
                    orientation: 'vertical'
                    id: shorts_player


            MDBottomNavigationItem:
                name: 'articles_screen'
                text: 'Articles'
                icon: 'script-text-outline'
                on_tab_release: root.load_articles()

                MDBoxLayout:
                    padding: dp(10)
                    md_bg_color: 1,1,1,1
                    size_hint: (1, None)
                    size: (root.width, root.height-dp(120))
                    id: articles_grid


            MDBottomNavigationItem:
                name: 'videos_screen'
                text: 'Videos'
                icon: 'youtube'
                on_tab_release: root.load_videos()

                MDBoxLayout:
                    padding: dp(10)
                    md_bg_color: 1,1,1,1
                    size_hint: (1, None)
                    size: (root.width, root.height-dp(120))
                    id: videos_grid


            MDBottomNavigationItem:
                name: 'subscriptions_screen'
                text: 'Subs'
                icon: 'account-group'
                on_tab_release: root.load_creators()

                MDBoxLayout:
                    padding: dp(10)
                    md_bg_color: 1,1,1,1
                    size_hint: (1, None)
                    size: (root.width, root.height-dp(120))
                    id: creators_grid

