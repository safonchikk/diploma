<MainScreen>

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            padding: dp(10), dp(3), 0, dp(3)
            spacing: dp(10)
            size_hint: 1, None
            height: dp(60)

            MDTextField:
                id: login_input
                mode: "round"
                multiline: False
                size_hint: .7, 1
                font_size: dp(30)

            MDIconButton:
                size_hint: .15, 1
                id: search_button
                background_color: 1,1,1,0
                #on_release: app.root.current = 'search'
                icon: 'magnify'
                icon_size: dp(55)

            MDIconButton:
                size_hint: .15, 1
                id: profile_button
                background_color: 1,1,1,0
                on_release:
                    app.user = ''
                    app.role = ''
                    app.root.current = 'login'
                icon: 'logout-variant'
                icon_size: dp(55)


        MDBottomNavigation:
            panel_color: .4, .4, .4, 1
            MDBottomNavigationItem:
                name: 'shorts_screen'
                text: 'Shorts'
                icon: 'filmstrip-box'
                FloatLayout
                    VideoPlayer:
                        id: video
                        #source: "images/cat_video.mp4"
                        size: self.parent.size
                        pos: self.parent.pos
                        state: 'stop'

                    Button:
                        id: like_button
                        pos_hint: {'x': .8, 'y': .4}
                        size_hint: .2, .1
                        background_color: 1,1,1,0
                        on_release: root.like()
                        Image:
                            id: like_icon
                            source: "images/like.png"
                            size: self.parent.size
                            pos: self.parent.pos

                    Button:
                        id: comment_button
                        pos_hint: {'x': .8, 'y': .27}
                        size_hint: .2, .1
                        background_color: 1,1,1,0
                        on_release:
                            #root.comment()
                            app.root.current = 'comment'
                            root.manager.transition.direction = 'up'
                        Image:
                            id: comment_icon
                            source: "images/comment.png"
                            size: self.parent.size
                            pos: self.parent.pos

                    Button:
                        id: share_button
                        pos_hint: {'x': 0.8, 'y': 0.14}
                        size_hint: (0.2, 0.1)
                        background_color: (1,1,1,0)
                        on_release:
                            root.share()
                        Image:
                            id: share_icon
                            source: "images/share.png"
                            size: self.parent.size
                            pos: self.parent.pos


            MDBottomNavigationItem:
                name: 'articles_screen'
                text: 'Articles'
                icon: 'script-text-outline'

                MDBoxLayout:
                    md_bg_color: 1,1,1,1
                    size_hint: (1, None)
                    size: (root.width, root.height-dp(120))
                    id: articles_grid


            MDBottomNavigationItem:
                name: 'videos_screen'
                text: 'Videos'
                icon: 'youtube'

                MDBoxLayout:
                    md_bg_color: 1,1,1,1
                    size_hint: (1, None)
                    size: (root.width, root.height-dp(120))
                    id: videos_grid


            MDBottomNavigationItem:
                name: 'subscriptions_screen'
                text: 'Subs'
                icon: 'account-group'

                MDBoxLayout:
                    md_bg_color: 1,1,1,1
                    size_hint: (1, None)
                    size: (root.width, root.height-dp(120))
                    id: creators_grid

