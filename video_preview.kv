<VideoPreview>
    on_press: app.root.current = 'login'
    MDFloatLayout:
        pos: root.pos
        size: self.parent.size
        md_bg_color: .8, .8, .8, 1

        Image:
            id: thumbnail
            source: 'images/thumbnail.jpg'
            pos_hint: {'top': .99, 'x': .02}
            size: self.size
            size_hint: (.96, .8)

        Image:
            id: author_avatar
            source: 'images/account.png'
            pos_hint: {'top': .2, 'x': .02}
            size_hint: (.15, .15)

        MDLabel:
            id: author_name
            text: 'John Doe'
            color: (0,0,0,1)
            pos_hint: {'top': .23, 'x': .18}
            size_hint: (.2, .2)
            text_size: self.size

        MDLabel:
            id: title
            text: 'Video Title'
            color: (0,0,0,1)
            text_size: self.size
            pos_hint: {'top': .34, 'x': .18}
            size_hint: (.7, .25)
            font_size: 30
