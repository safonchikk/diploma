<UpdateVideoScreen>:
    MDBoxLayout:
        spacing: dp(10)
        padding: dp(10)
        orientation: 'vertical'
        MDBoxLayout:
            size_hint: 1, .1
            spacing: dp(30)
            MDRoundFlatButton:
                size_hint: .2, 1
                text: 'Back'
                font_size: dp(20)
                on_release:
                    root.go_back(self)
            MDLabel:
                text: 'Edit video info'
                font_size: dp(20)
                size_hint: .8, 1

        MDLabel:
            text: "Title"
            text_size: self.size
            font_size: dp(20)
            size_hint: 1, .1
        MDTextField:
            id: title
            mode: 'round'
            font_size: dp(25)
            size_hint: 1, .15

        MDLabel:
            text: "Tags"
            text_size: self.size
            font_size: dp(20)
            size_hint: 1, .1
        MDTextField:
            id: tags
            mode: 'round'
            multiline: True
            size_hint: 1, .2

        MDRoundFlatButton:
            text: 'Post'
            font_size: dp(40)
            size_hint: 1, 0.2
            on_release:
                root.publish()
                root.go_back(self)