<RegistrationScreen>
    MDFloatLayout:
        size: root.size
        pos: root.pos
        MDBoxLayout:
            id:layout
            size_hint: 1, None
            height: self.minimum_height
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            pos_hint: {'top': .85}

            MDBoxLayout:
                MDLabel:
                    text: "I'm a"
                    text_size: self.size
                    font_size: dp(30)
                    size_hint: 0.3, None

                MDCheckbox:
                    group: 'group'
                    size_hint: 0.1, None
                    active: True
                MDLabel:
                    text: 'Viewer'
                    font_size: dp(25)
                    size_hint: 0.25, None

                MDCheckbox:
                    id: creator_checkbox
                    group: 'group'
                    size_hint: 0.1, None
                    active: True
                MDLabel:
                    text: 'Creator'
                    font_size: dp(25)
                    size_hint: 0.25, None

            MDTextField:
                hint_text: 'Login'
                helper_text: '5-32 symbols, a-z, A-Z, 0-9 and _ only'
                helper_text_mode: "on_error"
                on_text_validate:
                    root.validate_login()
                on_focus:
                    root.validate_login()
                id: login_input
                multiline: False
                size_hint: 1, None
                font_size: dp(40)

            MDTextField:
                id: password_input
                helper_text: '8-32 symbols'
                helper_text_mode: "on_error"
                on_text_validate:
                    root.validate_password()
                on_focus:
                    root.validate_password()
                password: True
                hint_text: 'Password'
                multiline: False
                size_hint: 1, None
                font_size: dp(40)

            MDTextField:
                id: password_confirm_input
                helper_text: "Passwords don't match!"
                helper_text_mode: "on_error"
                on_text_validate:
                    root.validate_second_password()
                on_focus:
                    root.validate_second_password()
                password: True
                hint_text: 'Repeat your password'
                multiline: False
                size_hint: 1, None
                font_size: dp(40)

            MDRoundFlatButton:
                text: 'Register'
                font_size: dp(40)
                size_hint: 1, None
                on_release:
                    root.register()
                    app.root.current = 'login'

            MDRoundFlatButton:
                text: 'I already have an account'
                font_size: dp(20)
                size_hint: 1, None
                line_color: (0, 0, 0, 0)
                on_release:
                    app.root.current = 'login'