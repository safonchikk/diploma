<RegistrationScreen>:
    MDFloatLayout:
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            size_hint: (1, .5)
            pos_hint: {'top': 1.0}

            MDFloatLayout:

                MDLabel:
                    text: "I'm a"
                    text_size: self.size
                    font_size: dp(30)
                    size_hint: None, None
                    size: dp(200), dp(48)
                    pos_hint: {'x': 0, 'center_y': .5}

                MDCheckbox:
                    group: 'group'
                    size_hint: None, None
                    size: dp(48), dp(48)
                    active: True
                    pos_hint: {'x': .3, 'center_y': .4}
                MDLabel:
                    text: 'Viewer'
                    size_hint: None, None
                    size: dp(200), dp(48)
                    pos_hint: {'x': .4, 'center_y': .4}

                MDCheckbox:
                    id: creator_checkbox
                    group: 'group'
                    size_hint: None, None
                    size: dp(48), dp(48)
                    active: True
                    pos_hint: {'x': .7, 'center_y': .4}
                MDLabel:
                    text: 'Creator'
                    size_hint: None, None
                    size: dp(200), dp(48)
                    pos_hint: {'x': .8, 'center_y': .4}

            MDTextField:
                hint_text: 'Login'
                id: login_input
                multiline: False
                size_hint: 1, None
                font_size: dp(40)

            MDTextField:
                id: password_input
                password: True
                hint_text: 'Password'
                multiline: False
                size_hint: 1, None
                font_size: dp(40)

            MDTextField:
                id: password_confirm_input
                password: True
                hint_text: 'Repeat your password'
                multiline: False
                size_hint: 1, None
                font_size: dp(40)

        MDBoxLayout:
            pos_hint: {'bottom': 1.0}
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            size_hint: (1, .18)

            MDRoundFlatButton:
                text: 'Register'
                font_size: dp(40)
                size_hint: (1, 0.4)
                on_release:
                    root.register()
                    app.root.current = 'main'

            MDRoundFlatButton:
                text: 'I already have an account'
                font_size: dp(20)
                size_hint: (1, 0.2)
                line_color: (0, 0, 0, 0)
                on_release:
                    app.root.current = 'login'