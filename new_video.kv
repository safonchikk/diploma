<NewVideoScreen>:
    MDBoxLayout:
        spacing: dp(10)
        padding: dp(10)
        orientation: 'vertical'
        MDLabel:
            halign: "center"
            text: "New screen"
            text_size: self.size
            font_size: dp(40)
            size_hint: 1, .1

        MDLabel:
            text: "Title"
            text_size: self.size
            font_size: dp(20)
            size_hint: 1, .1
        MDTextField:
            id: title
            mode: 'round'
            font_size: dp(25)
            size_hint: 1, .15

        MDLabel:
            text: "Video"
            text_size: self.size
            font_size: dp(20)
            size_hint: 1, .1
        MDBoxLayout:
            size_hint: 1, 0.1
            MDRoundFlatButton:
                text: 'Choose'
                font_size: dp(30)
                size_hint: 0.4, 1
                on_release:
                    root.open_manager(root.video_file_manager)
            MDLabel:
                id: video_path
                text_size: self.size
                font_size: dp(14)
                size_hint: 0.6, 1

        MDLabel:
            text: "Thumbnail"
            text_size: self.size
            font_size: dp(20)
            size_hint: 1, .1
        MDBoxLayout:
            size_hint: 1, 0.1
            MDRoundFlatButton:
                text: 'Choose'
                font_size: dp(30)
                size_hint: 0.4, 1
                on_release:
                    root.open_manager(root.thumbnail_file_manager)
            MDLabel:
                id: thumbnail_path
                text_size: self.size
                font_size: dp(14)
                size_hint: 0.6, 1

        MDLabel:
            text: "Tags"
            text_size: self.size
            font_size: dp(20)
            size_hint: 1, .1
        MDTextField:
            id: tags
            mode: 'round'
            multiline: True
            size_hint: 1, .2

        MDRoundFlatButton:
            text: 'Post'
            font_size: dp(40)
            size_hint: 1, 0.2
            on_release:
                root.publish()